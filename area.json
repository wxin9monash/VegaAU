{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {"url": "data.csv"},
    "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
    "encoding": {
      "x": {"timeUnit": "year", "field": "year", "type": "ordinal"},
      "y": {"aggregate": "sum","field":"amount"},
      "color": {"field": "country"}
    }
  }